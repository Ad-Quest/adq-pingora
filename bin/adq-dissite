#!/usr/bin/env node

const { spawn } = require('child_process');
const path = require('path');
const fs = require('fs');

// Find the actual script
const scriptPath = '/usr/local/bin/adq-dissite';

if (!fs.existsSync(scriptPath)) {
    console.error('ADQ Pingora scripts not found. Please run: npm install -g adq-pingora');
    process.exit(1);
}

// Pass all arguments to the actual script
const child = spawn(scriptPath, process.argv.slice(2), {
    stdio: 'inherit'
});

child.on('exit', (code) => {
    process.exit(code);
});